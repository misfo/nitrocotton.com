<div class="pic">
  <div class="picture" style="background:url(<%=h shirt.image.public_filename(:thumb) %>) top center no-repeat;" alt="<%=h shirt.text %>">
    <div class="tee_overlay" style="display: none;">
      <div class="tee_overlay_content">
        <div class="thumbs">
          <a href="<%= shirt_votes_path(shirt) %>" class="<%= vote_class(:up, shirt) %>" rel="nofollow"><img src="/images/thumbs_up.png" /></a>
          <a href="<%= shirt_votes_path(shirt) %>" class="<%= vote_class(:down, shirt) %>" rel="nofollow"><img src="/images/thumbs_down.png" /></a>
        </div>
        <a href="<%=h shirt.merchant_url %>" class="merchant"><%=h shirt.merchant.name %></a>
        <a href="<%=h shirt.merchant_url %>" class="price"><%= price_range(shirt.min_price, shirt.max_price) %></a>
        <a href="<%= shirt_path(shirt) %>" class="comment_count"><%= pluralize(shirt.comments.size, "comment") %></a>
      </div>  
    </div>
  </div>
</div>
