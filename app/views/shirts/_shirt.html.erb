<div class="tee_tile" id="tee_tile_<%= shirt.id %>">
  <div class="tee_thumb">
    <%= link_to(image_tag(shirt.image.public_filename(:thumb), :alt => shirt.text), shirt.merchant_url,
      :class => 'tee', :popup => true) %>
  </div>
  <span class="vote">
    <%= link_to_remote(image_tag('thumb_up_28.png'),
      :url => shirt_votes_path(shirt, :vote => 1), :method => :post,
      :before => "showVote(#{shirt.id}, 'up')",
      :html => { :class => "vote", :id => "thumb_up_#{shirt.id}" }) %>
    <%= link_to_remote(image_tag('thumb_down_28.png'),
      :url => shirt_votes_path(shirt, :vote => -1), :method => :post,
      :before => "showVote(#{shirt.id}, 'down')",
      :html => { :class => "vote", :id => "thumb_down_#{shirt.id}" }) %>
  </span>
  <%= price shirt.min_price %><br />
  <%= link_to(shirt.merchant.name, shirt.merchant_url) %>
</div>
